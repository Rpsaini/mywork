<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <com.markrap.view.RoundedImageView
                android:id="@+id/user_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/side_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/user_profile"
                android:orientation="vertical">

                <fontspackageForTextView.BoldMedium

                    android:id="@+id/user_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="left|center"
                    android:text="Hi"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <fontspackageForTextView.Regular

                    android:id="@+id/txtpleaseSelectPrefferedloctaion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="left|center"
                    android:text="Get better ranking with us"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>



        </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="10dp"
            >



            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/dotted_border"
                >

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <fontspackageForTextView.BoldMedium
                        android:textColor="@color/color_black"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Performance"
                        android:textSize="14dp"
                        android:gravity="center"
                        ></fontspackageForTextView.BoldMedium>


                    <ImageView
                        android:tint="@color/colorLightBlack"
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/performance"
                        ></ImageView>
                    <fontspackageForTextView.BoldMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Good"
                        android:textColor="@color/color_black"
                        android:textSize="18dp"></fontspackageForTextView.BoldMedium>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout

            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">



                <LinearLayout
                    android:background="@drawable/red_border"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >
                <fontspackageForTextView.BoldMedium
                    android:layout_margin="5dp"
                    android:textColor="@color/color_black"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number Of Mapped Stockists"
                    android:textSize="14dp"
                    android:gravity="center"
                    ></fontspackageForTextView.BoldMedium>


                    <fontspackageForTextView.BoldMedium

                        android:id="@+id/numberofMAppedStockist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="--"
                        android:textColor="@color/color_black"
                        android:textSize="20dp"
                        android:textStyle="bold"></fontspackageForTextView.BoldMedium>

                </LinearLayout>





                <LinearLayout
                    android:background="@drawable/red_border"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >
                    <fontspackageForTextView.BoldMedium
                        android:textColor="@color/color_black"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of stockists billed "
                        android:textSize="14dp"
                        android:gravity="center"
                        ></fontspackageForTextView.BoldMedium>


                    <fontspackageForTextView.BoldMedium
                        android:id="@+id/txtNumberOfStockistBilled"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Coming Soon"
                        android:textColor="@color/redcolor"
                        android:gravity="center"
                        android:textSize="18dp"
                        ></fontspackageForTextView.BoldMedium>

                </LinearLayout>



            <LinearLayout
                android:background="@drawable/red_border"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                        <fontspackageForTextView.BoldMedium
                            android:textColor="@color/color_black"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MTD Billed Value"
                            android:textSize="14dp"
                            android:gravity="center"
                            ></fontspackageForTextView.BoldMedium>


                        <fontspackageForTextView.BoldMedium
                            android:id="@+id/totalAttendance"
                            android:textColor="@color/color_black"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            ></fontspackageForTextView.BoldMedium>

            </LinearLayout>




                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >
                        <fontspackageForTextView.BoldMedium
                            android:textColor="@color/color_black"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PSR Mapping &amp; Sales Button"
                            android:textSize="14dp"
                            android:gravity="center"
                            ></fontspackageForTextView.BoldMedium>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            >

                            <fontspackageForTextView.BoldMedium
                                android:textColor="@color/color_black"
                                android:padding="6dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="PSR"
                                android:textSize="14dp"
                                android:gravity="center"
                                ></fontspackageForTextView.BoldMedium>

                            <fontspackageForTextView.BoldMedium
                                android:textColor="@color/color_black"
                                android:padding="6dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="#Stockist"
                                android:textSize="14dp"
                                android:gravity="center"
                                ></fontspackageForTextView.BoldMedium>


                            <fontspackageForTextView.BoldMedium
                                android:textColor="@color/color_black"
                                android:padding="6dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="#Sales"
                                android:textSize="14dp"
                                android:gravity="center"
                                ></fontspackageForTextView.BoldMedium>
                        </LinearLayout>
                        <View
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height=".5dp"
                            android:layout_width="match_parent"
                            android:background="@color/color_black"
                            ></View>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:id="@+id/psrRecyclerView"
                            ></androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    </LinearLayout>


</LinearLayout>




    </LinearLayout>

