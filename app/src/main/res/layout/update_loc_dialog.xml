<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/llErrorDialog"
    android:background="@drawable/dialog_with_round_corner"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageButton
        android:layout_gravity="left|center"
        android:id="@+id/imgCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/cross" />

</LinearLayout>



    <fontspackageForTextView.BoldMedium

        android:singleLine="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.BoldMedium>



    <fontspackageForTextView.Regular
        android:id="@+id/txtMsg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.Regular>




    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/llLatLng"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <fontspackageForTextView.Regular
            android:id="@+id/txtLatitude"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="0"
            android:textColor="@color/color_black" />

        <fontspackageForTextView.Regular
            android:id="@+id/txtLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_black"
            android:textSize="14sp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgOutlet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                ></ImageView>
            <fontspackageForTextView.Regular
                 android:layout_gravity="center"
                android:id="@+id/takeaphoto"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_sign_in"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/quantum_grey"
                android:contentDescription=""
                android:gravity="center"
                android:minHeight="10dp"
                android:text="Take Stockist  photo"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />

        </LinearLayout>
        <fontspackageForTextView.Regular
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/txtyes"
            android:background="@color/redcolor"
            android:layout_width="250dp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
            android:text="Mark Visit"
            android:gravity="center"
            android:padding="10dp"

            android:textAllCaps="true"></fontspackageForTextView.Regular>
        <fontspackageForTextView.Regular
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/txtno"
            android:background="@color/colorPrimary"
            android:layout_width="250dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Visit Secondry Outlet"

            android:gravity="center"
            android:textAllCaps="true"></fontspackageForTextView.Regular>

    </LinearLayout>


</LinearLayout>