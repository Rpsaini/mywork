<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="15dp"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <fontspackageForTextView.BoldMedium
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:backgroundTint="@color/color_black"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Month"
                android:textColor="@color/color_black"
                android:textSize="16sp" />

            <fontspackageForTextView.BoldMedium
                android:id="@+id/txtMonth"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1.5"
                android:background="@drawable/edittextdrawable"
                android:gravity="center"
                android:textSize="12sp"></fontspackageForTextView.BoldMedium>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Till"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTillDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="19"
                android:textColor="@color/color_black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <fontspackageForTextView.Regular
                android:background="@drawable/round_button_red"
android:padding="2dp"
                android:id="@+id/txtAllFilter"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="All"
                android:textColor="@color/colorWhite" />

            <fontspackageForTextView.Regular
                android:background="@drawable/round_button_red"
                android:padding="2dp"

                android:id="@+id/txtUnbilledFilter"

                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Unbilled"

                android:textColor="@color/colorWhite" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <fontspackageForTextView.Regular
                android:background="@drawable/round_button_red"
                android:padding="2dp"

                android:id="@+id/txtBuildButNotThresholdActive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Build But Threshold Not Active"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <fontspackageForTextView.Regular
                android:background="@drawable/round_button_red"
                android:id="@+id/txtThreshholdActivebutTargetNot"
                android:layout_width="0dp"
                android:padding="2dp"

                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Threshold Achive But Target not Achive"
                android:textColor="@color/colorWhite"

                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_light_gray"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">
        >

        <Spinner
            android:id="@+id/spinnerWDCode"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="5.4">

        <fontspackageForTextView.BoldMedium
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:maxLines="2"
            android:text="StkId"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"></fontspackageForTextView.BoldMedium>


        <fontspackageForTextView.BoldMedium
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:maxLines="2"

            android:text="Stockist Name"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"></fontspackageForTextView.BoldMedium>


        <fontspackageForTextView.BoldMedium
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:padding="6dp"

            android:text="Bgt Target"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"></fontspackageForTextView.BoldMedium>


        <fontspackageForTextView.BoldMedium
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:padding="6dp"

            android:text="Threshold"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"></fontspackageForTextView.BoldMedium>

        <fontspackageForTextView.BoldMedium
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:padding="6dp"

            android:text="Active"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"></fontspackageForTextView.BoldMedium>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_black"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/samraddhiiRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>