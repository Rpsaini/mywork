            <fontspackageForTextView.Regular
                android:id="@+id/outletlocation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_line"
                android:gravity="center|left"
                android:hint="Select Location"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_black"
                android:visibility="gone" />


            <fontspackageForTextView.Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="OR, Add Loction manually "
                android:textColor="@color/redcolor"
                android:visibility="gone"></fontspackageForTextView.Regular>



              <LinearLayout
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  >

                  <ImageView
                      android:visibility="gone"
                      android:id="@+id/imgOutlet"
                      android:layout_width="100dp"
                      android:layout_height="100dp"
                      android:layout_marginTop="10dp"
                      ></ImageView>
            <fontspackageForTextView.Regular
                android:id="@+id/takeaphoto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_sign_in"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/quantum_grey"
                android:contentDescription=""
                android:gravity="center"
                android:minHeight="10dp"
                android:text="Take outlet photo"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />

              </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_latitude"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_line"
                    android:hint="Enter Latitude"
                    android:imeOptions="actionNext"
                    app:boxBackgroundMode="none">

                    <fontpackageforEdittext.Regular

                        style="@style/EditText.Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="text"
                        android:singleLine="true"
                        android:theme="@style/EditText.Login" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_longitude"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_line"
                    android:hint="Enter Longitude"
                    android:imeOptions="actionNext"
                    app:boxBackgroundMode="none">

                    <fontpackageforEdittext.Regular
                        style="@style/EditText.Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="text"
                        android:singleLine="true"
                        android:theme="@style/EditText.Login" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <fontpackageforEdittext.Regular
                android:id="@+id/edlandmark"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextdrawable"
                android:gravity="top|left"
                android:hint="Landmark"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="@color/color_black"
                android:theme="@style/EditText.Login"
                android:visibility="gone" />


            <fontpackageforEdittext.Regular
                android:id="@+id/edaddress"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextdrawable"
                android:gravity="top|left"
                android:hint="Address/Landmark"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="@color/color_black"
                android:theme="@style/EditText.Login" />


            <fontspackageForTextView.Regular
                android:id="@+id/verify_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_sign_in"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:contentDescription=""
                android:gravity="center"
                android:minHeight="10dp"
                android:text="Add Outlet"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_btn"

                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                android:orientation="horizontal"

                android:padding="4dp">


            </LinearLayout>

