<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:id="@+id/llErrorDialog"
    android:background="@drawable/roundcornerrawable"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_gravity="center"

    android:layout_height="wrap_content">





    <fontspackageForTextView.BoldMedium

        android:singleLine="true"

        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Task Comments"
        android:gravity="center"
        android:textColor="@color/color_black"

        ></fontspackageForTextView.BoldMedium>



       <fontpackageforEdittext.Regular
           android:id="@+id/edmytask"
           android:inputType="textMultiLine"
           android:gravity="top"
           android:padding="7dp"
           android:hint="Enter Your Comment"
           android:layout_marginTop="20dp"
           android:layout_height="156dp"
           android:layout_width="match_parent"
           android:textSize="14dp"
           android:background="@drawable/edittextdrawable"
           android:textColor="@color/color_black"

           ></fontpackageforEdittext.Regular>



    <fontspackageForTextView.Regular
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:id="@+id/txtNext"
        android:background="@color/colorPrimary"
        android:layout_width="180dp"

        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Submit Task"
        android:gravity="center"
        android:padding="10dp"

        android:textAllCaps="true"></fontspackageForTextView.Regular>



</LinearLayout>